/* pages/management/management.wxss */

.searchBox{
  font-size: 28rpx;
}

.searchBox{
  display: flex;
  padding-right: 16rpx;
  margin-top:16rpx;
}
.section{
  flex:3;
  border-radius: 5px;
  line-height: 80rpx;
  padding:0 16rpx;
}
.picker{
  background: white;
  padding: 0 16rpx;
  text-align: center;
  border-radius: 5px;
}
.searchBtn{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size:32rpx;
  background: #4CA5FF;
  color: white;
}
.money{
  font-size: 70rpx;
  font-weight: 600;
  color: red;
  text-align: center;
  line-height: 320rpx;
}

.statistics{
  font-size:30rpx;
  background: white;
}
.statistics>view{
  float: left;
  width: 50%;
  padding:0 16rpx;
  line-height: 80rpx;
  border-bottom:1px solid #f1f1f1;
  border-right: 1px solid #f1f1f1;
  box-sizing: border-box;  
}
.statistics>view:nth-child(2n){
  border-right: 0;
}

.button{
  display: flex;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.button form{
  width: 50%;
}
.button button{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 0;
}
.presentRight{
  border-right: 1px solid #f1f1f1;
}
.lightBlue{
  opacity: 0.6;
}