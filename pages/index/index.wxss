/**index.wxss**/
.header{
  height: 9vh;
  padding:16rpx 0;
  display: flex;
  border-bottom:1px solid #DDD;
  box-sizing: border-box;
}

.searchBox{
  flex: 3;
}
.avatarBox,.moreBox{
  text-align: center;
  width: 10vw;
  height: 10vw;
}
.avatarBox{
  margin-right: 20rpx;
  text-align: center;
  display: flex;
  flex:0 0 90rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* border-radius: 50%;
  overflow: hidden; */
}
.avatar{
  width: 7vw;
  height: 7vw;
  /* margin-left:1.5vw; */
  overflow: hidden;
  border-radius: 50%;
}
.userCenter{
  font-size:20rpx;
}
.moreBox{
  margin-left: 20rpx;
}
.more{
  width: 9vw;
  height: 9vw;
  margin-top:0.5vw;
}
.searchMapBtn{
  height: 10vw;
  line-height: 10vw;
  font-size:28rpx;
  background: white;
  margin-left:20rpx;
  margin-right: 20rpx;
}

#map{
  width: 100%;
  height: 91vh;
}

.scanBtn{
  position: fixed;
  /* width: 58vw;
  height: 17vw; */
  width: 32vw;
  height: 32vw;
  bottom:3vw;
  left: 34vw;
}

.hicon{
  position: fixed;
  width: 14vw;
  height: 14vw;
}
.resetBtn{
  bottom:6.5vw;
  left:3.5vw;
}
.serviceBtn{
  bottom:6.5vw;
  right:3.5vw;
}
.repairBtn{
  bottom: 25.5vw;
  right: 3.5vw;
}

.addressBox{
  position: fixed;
  display: flex;
  width: 96%;
  left: 2%;
  top: 10vh;
  padding:20rpx;
  box-sizing: border-box;
  background: white;
  border-radius: 5px;
  box-shadow: 0 0 8px #DDD;
}

.bannerBox{
  width: 15vw;
  height: 15vw;
}
.banner{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.shopInfo{
  width: 60vw;
  font-size:28rpx;
  margin-left:16rpx;
  color: #484848;
}
.shopName{
  width:  60vw;
  font-weight: 600;
}
.infoitem{
  width:  60vw;
  margin-top:10rpx;
  font-size:24rpx;
}