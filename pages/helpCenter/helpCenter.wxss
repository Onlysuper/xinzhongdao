/* pages/helpCenter/helpCenter.wxss */

.item{
  background: white;
  font-size:34rpx;
  padding:30rpx 16rpx;
  border-bottom: 1px solid #f1f1f1;
}
.right{
  width: 5vw;
  height: 5vw;
  float: right;
}




.answer{
  margin: 20rpx 16rpx;
  background: white;
  border-radius: 5px;
  font-size:32rpx;
  padding:16rpx;
  line-height: 50rpx;
}

.opearBtn{
  position: fixed;
  width: 100%;
  bottom:0;
  left: 0;
  display: flex;
}
.opearBtn button{
  float:left;
  flex: 1;
  width: 33.333%;
  height: 8vh;
  line-height: 8vh;
  font-size:32rpx;
  border-radius: 0;
}
.service{
  border-left: 1px solid #f1f1f1;
}


.version{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size:26rpx;
  color: #999;
  padding-bottom:8vh;
}