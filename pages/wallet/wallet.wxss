.myBalance{
  background: white;
  padding: 40rpx 16rpx;
  text-align: center;
}
.left,.right{
  float:left;
  width: 50%;
}
.left{
  border-right: 1px solid #f1f1f1;
  box-sizing: border-box;
}
.balanceTitle{
  font-size:30rpx;
}
.balance{
  margin-top:10rpx;
  font-size:45rpx;
  color: #fc0909;
}

.listitem{
  background:white;
  margin-top:16rpx;
  padding:25rpx 16rpx;
  line-height: 5vw;
  font-size: 30rpx;
}
.iconleft{
  width: 5vw;
  height: 5vw;
  margin-right: 16rpx;
  vertical-align: text-bottom;
}
.iconright{
  width: 5vw;
  height: 5vw;
  float: right;
}

.oprarBtn{
  border-top:1px solid #f1f1f1;
}
.oprarBtn form{
  float: left;
  width: 50%;
  box-sizing: border-box;
}
.btn{
  border-radius: 0;
  background: white;
  font-size:30rpx;
}
.rechargeForm{
  border-right: 1px solid #f1f1f1;
}
.lightBtn{
  background: #f5f5f5;
}